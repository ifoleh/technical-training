<odoo>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="description" />
                <field name="expected_price" />
                <field name="activeForSale"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="postcode" />
                            <field name="date_availability" />
                            <field name="state" />
                            <field name="type" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="garden" />                            
                            <field name="garden_orientation" />                            
                        </group>
                        <group>
                            <field name="salesman" />
                            <field name="customer" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="garden"/>
                                    <field name="garden_orientation"/>
                                    <field name="activeForSale" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Property">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <separator/>
                <filter string="Available" name="available" domain="[('state','=','available')]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property Action</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="estate_property_root" name="Estate Property">
        <menuitem id="estate_property_menu_1" name="Menu One">
            <menuitem id="estate_property_menu_action" action="estate_property_action"/>
        <menuitem id="estate_property_menu_2" name="Menu Two" />
        </menuitem>
    </menuitem>
    
</odoo>